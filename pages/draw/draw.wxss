/* pages/draw/draw.wxss */
.main{
   height: 100%;
  background-color: #f3f3f3;
}
.topTitle{
  width: 100%;
  height: 100rpx;
  background-color: #f3f3f3;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userAvatar{
  width: 70rpx;
  height: 70rpx;
  margin-left: 10rpx;
  box-shadow: 7rpx 7rpx 0 #FF0099;
}
.guessQuestion{
  display: flex;
  flex: 1;
  color:#FF0099;
  padding-left: 20rpx;
  font-size: 26rpx;
   flex-direction: row;
}
.refreshBtn{
  width: 35rpx;
  height: 35rpx;
  margin-left: 10rpx;
}

.mineQuestion{
  display: flex;
  color:#777;
  font-size: 26rpx;
  flex-direction: row;
  margin-right: 10rpx;
 
}
.penInfo{
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
}
.penWidth{
  flex: 1;
  display: flex;
  flex-direction: row;
   align-items: center;
}
.colorInfo{
  display: flex;
  flex-direction: row;
}
.colorInfoList{
  margin-top: 10rpx;
  height: 60rpx;
  align-items: center;
overflow:hidden;white-space:nowrap;

}
.penInfoTitle,.colorInfoTitle{
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #777;
   font-size: 30rpx;
   margin-right: 20rpx;
}
.penWidthItem{
  width: 70rpx;
  height: 60rpx;
  display: flex;
   flex-direction: row;
   align-items: center;
     justify-content: center;
}
.colorInfoItem{
  display:inline-block; 
  width: 60rpx; 
  height: 60rpx;
  margin-left: 20rpx;
  margin-top: 12.5rpx;
}
.colorInfoItemColor{
  
width:40rpx;height:40rpx;  
}
.clearBtn{
   display: flex;
   flex-direction: row;
   align-items: center;
     justify-content: center;
     margin-right: 10rpx;
}
.bottomBtn{
  width: 100%;
  height: 350rpx;
  margin-top: 50rpx;
}
.bottomBtn view{
  width: 80%;
  margin-left: 10%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}
.bottomBtn view:first-child{
  background-color: #FFFF00;
  color: #000;
  padding: 10rpx;

}
.bottomBtn view:last-child{
  background-color: #777;
  margin-top: 20rpx;
  color: #ffffff;
  padding: 10rpx;
}
.createQuestion{
  width: 80%;
  height: 280px;
  background: #ffffff;
  padding-left:10%;
  padding-right: 10%;
  padding-top: 20px;

}
.btn-area{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.questionAsk{
  margin-top: 40rpx;
}
.questionAskInfo{
 font-size: 30rpx;
 color: #777;
}
.questionAsk input{
  padding: 10rpx;
  width: 100%;
  border: 1rpx solid #000;
  box-shadow: 8rpx 8rpx 0 #ccc;
  margin-top: 10rpx;
}
.btn-area view{
  width: 35%;
  background: #777;
  text-align: center;
  margin:5%;
  padding: 1%;
  margin-top: 40rpx;
}
.btn-area view:first-child{
  background: #ffffff;
  border:1rpx solid #777;
  color: #777;
  font-size: 36rpx;
}
.btn-area view:last-child{
   background: #FFFF00;
  border:1rpx solid #000;
  color: #000;
  font-size: 36rpx;
}
.tishi{
  width: 100%;
  font-size: 28rpx;
  color: #777;
  text-align: center
}
.questionForm{
    animation: myfirst 0.5s;
}
@keyframes myfirst
{
from {
  transform: translateY(-10px);
  opacity: 0;
}
to {
   transform: translateY(0px);
   opacity: 1;
  }
}